<div class="card-header d-flex flex-column justify-content-center align-items-center">
  <h5>Customer: <%= order.customer.full_name %></h5>
  <p>zipcode: <%= order.customer.zipcode %></p>
</div>
<div class="card-body">
  <h5>Order: </h5>
  <% order.products.each do |product| %>
    <p>
      <%= product.name %>: <%= OrderProduct.find_by(order_id: order.id, product_id: product.id).quantity%>
    </p>
  <% end %>
</div>
<div class="card-footer">
  <%= link_to 'Remove Order', order, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-danger' %>
</div>
